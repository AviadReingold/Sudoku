<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    android:background="@color/material_dynamic_primary95"
    tools:context=".AddUsers">

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <ImageButton
        android:id="@+id/btnGoBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#FF9800"
        android:background="@drawable/baseline_arrow_back_24" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="39dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:fontFamily="cursive"
        android:text="Add User"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="90sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:fontFamily="cursive"
        android:text="Pick level:"
        android:textStyle="bold"

        android:textAlignment="center"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/lyNum"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"></Space>

        <android.widget.Button
            android:id="@+id/btnEasy"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btndefault"
            android:fontFamily="cursive"
            android:text="Easy"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="20dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"></Space>

        <android.widget.Button
            android:id="@+id/btnMedium"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btndefault"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:text="Medium"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="20dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"></Space>

        <android.widget.Button
            android:id="@+id/btnHard"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:background="@drawable/btndefault"
            android:textStyle="bold"
            android:text="Hard"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="20dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"></Space>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="cursive"
        android:textSize="18dp"
        android:hint="Enter player name"
        android:textColorHint="@color/design_default_color_secondary_variant"
        android:inputType="text"
        android:textColor="@color/design_default_color_secondary_variant" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp"></Space>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="278dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:backgroundTint="#FF9800"
        android:fontFamily="cursive"
        android:text="Play"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="60sp" />

</LinearLayout>